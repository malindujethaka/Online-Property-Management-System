<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
      
      <servlet>
      	<servlet-name>login</servlet-name>
      	<servlet-class>Servlets.Loginservlet</servlet-class>
      </servlet>
      <servlet-mapping>
      		<servlet-name>login</servlet-name>
      		<url-pattern>/log</url-pattern>
      
      </servlet-mapping>
      
       <servlet>
      	<servlet-name>SellerRegservlet</servlet-name>
      	<servlet-class>Servlets.SellerRegservlet</servlet-class>
      </servlet>
      <servlet-mapping>
      		<servlet-name>SellerRegservlet</servlet-name>
      		<url-pattern>/SellerRegister</url-pattern>
      
      </servlet-mapping>
      
        <servlet>
      	<servlet-name>BuyerRegservlet</servlet-name>
      	<servlet-class>Servlets.BuyerRegservlet</servlet-class>
      </servlet>
      <servlet-mapping>
      		<servlet-name>BuyerRegservlet</servlet-name>
      		<url-pattern>/BuyerRegister</url-pattern>
      
      </servlet-mapping>
      
       <servlet>
      	<servlet-name>deleteSellerAccservlet</servlet-name>
      	<servlet-class>Servlets.deleteSellerAccservlet</servlet-class>
      </servlet>
      <servlet-mapping>
      		<servlet-name>deleteSellerAccservlet</servlet-name>
      		<url-pattern>/deleteSeller</url-pattern>
      
      </servlet-mapping>
      <servlet>
      	<servlet-name>deleteBuyerAccservlet</servlet-name>
      	<servlet-class>Servlets.deleteBuyerAccservlet</servlet-class>
      </servlet>
      <servlet-mapping>
      		<servlet-name>deleteBuyerAccservlet</servlet-name>
      		<url-pattern>/deleteBuyer</url-pattern>
      
      </servlet-mapping>
      <servlet>
      	<servlet-name>resetPasswordservlet</servlet-name>
      	<servlet-class>Servlets.resetPasswordservlet</servlet-class>
      </servlet>
      <servlet-mapping>
      		<servlet-name>resetPasswordservlet</servlet-name>
      		<url-pattern>/reset</url-pattern>
      
      </servlet-mapping>
         
</web-app>         